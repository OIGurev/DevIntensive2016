<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.activities.MainActivity"
              android:orientation="vertical"
              android:isScrollContainer="false"
              android:scrollbars="vertical"
              android:weightSum="1"
>


    //Телефон


        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/gray"
        android:layout_weight="0.26">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5"
                android:textColor="@color/white"
                android:id="@+id/textView"
                android:layout_weight="0.5"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Рейтинг"
                android:textColor="@color/white"
                android:id="@+id/textView2"
                android:layout_weight="0.5"
                android:layout_gravity="top"
                android:gravity="top|center_horizontal"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/size_small_24"
            android:layout_marginTop="@dimen/size_small_24"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5"
                android:textColor="@color/white"
                android:id="@+id/textView4"
                android:layout_weight="0.5"
                android:gravity="bottom|center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Написано строк кода"
                android:textColor="@color/white"
                android:id="@+id/textView3"
                android:layout_weight="0.5"
                android:gravity="top|center_horizontal"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/size_small_24"
            android:layout_marginTop="@dimen/size_small_24"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5"
                android:textColor="@color/white"
                android:id="@+id/textView6"
                android:layout_weight="0.5"
                android:gravity="bottom|center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Проектов"
                android:textColor="@color/white"
                android:id="@+id/textView5"
                android:layout_weight="0.5"
                android:gravity="top|center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
                 <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                     <EditText
                         android:id="@+id/phone_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="phone"
                         android:hint="Мобильный телефон"
                         android:text="9(222)22-22-22"
                         />
                 </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
        />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

        //E-mail

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
                 <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                     <EditText
                         android:id="@+id/email_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="textWebEmailAddress"
                         android:hint="E-mail"
                         android:text="mymail@mail.ru"
                         />
                     />
                 </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    //Профиль ВК
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/vk"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/vk_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Профиль в VK"
                    android:text="vk.com/..."
                    />
                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    //Репозиторий
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/github"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/git_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Репозиторий"
                    android:text="github.com/..."
                    />
                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    //О себе
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/account_circle"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_larger_72">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/about_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:hint="О себе"
                    android:text="Зафар, бери и жакет, и кепку, вечером будет очень холодная погода."
                    />
                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
